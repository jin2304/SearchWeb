<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">



<mapper namespace="com.web.SearchWeb.comment.dao.CommentDao"> <!--Dao 이름-->

    <!-- 게시글 댓글 생성 -->
    <insert id="insertComment" parameterType="com.web.SearchWeb.comment.dto.CommentDto">
        insert INTO comment (board_boardId, member_memberId, member_nickname, content)
        VALUES (#{board_boardId}, #{member_memberId}, #{member_nickname}, #{content});
    </insert>


    <!-- 게시글 댓글 목록 조회 -->
    <select id="selectComments" resultType="com.web.SearchWeb.comment.domain.Comment">
        select *
        from comment
        WHERE board_boardId = #{boardId}
    </select>

</mapper>